{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2019",
    "declaration": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": []
}
