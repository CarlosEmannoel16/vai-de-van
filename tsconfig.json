{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types/express"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@domain/*": ["domain/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["infra/*"],
      "@data/*": ["data/*"],
      "@makeRepositories": ["main/factories/repositories/index.ts"],
      "@makeControllers": ["main/factories/controllers/index.ts"],
      "@makeUseCases": ["main/factories/useCases/index.ts"],

    }
  },
  "include": ["./src/**/*"],
  "exclude": []
}
